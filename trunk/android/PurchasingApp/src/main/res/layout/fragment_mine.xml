<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/minebg"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:src="@mipmap/tttttt"/>
            <TextView
                android:id="@+id/tvTopTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="我的"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textSize="18sp"
                />


        </RelativeLayout>

        <TextView
            android:id="@+id/TV_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:background="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="芒果"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#50BDBDBD"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/m_adress"
                android:layout_margin="15dp"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                android:textColor="#808080"
                android:text="仓库名称"/>
            <TextView
                android:id="@+id/TV_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#9c9c9c"
                android:layout_alignParentRight="true"
                android:background="#fff"
                android:layout_margin="15dp"
                android:text="虹桥仓库"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#50BDBDBD"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/m_address"
                android:layout_margin="15dp"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                android:textColor="#808080"
                android:text="地址"/>
            <TextView
                android:id="@+id/TV_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#9c9c9c"
                android:layout_alignParentRight="true"
                android:background="#fff"
                android:layout_margin="15dp"
                android:text="静安区"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#50BDBDBD"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/m_tel"
                android:layout_margin="15dp"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                android:textColor="#808080"
                android:text="联系电话"/>
            <TextView
                android:id="@+id/TV_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#9c9c9c"
                android:layout_alignParentRight="true"
                android:background="#fff"
                android:layout_margin="15dp"
                android:text="15324800599"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#50BDBDBD"/>

        <RelativeLayout
            android:id="@+id/TV_set"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_margin="15dp"
                android:drawablePadding="8dp"
                android:background="#fff"
                android:drawableLeft="@mipmap/m_set"
                android:text="设置"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="179dp"
                android:background="#50BDBDBD" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#50BDBDBD"/>

    </LinearLayout>

</RelativeLayout>
</ScrollView>