<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/right_lin"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/leftName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="名称"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="#383a39"/>

            <ImageView
                android:id="@+id/statusError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:src="@mipmap/statuserror"/>
            <TextView
                android:id="@+id/leftDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="时间：11-12 10:20"
                android:layout_marginBottom="0dp"
                android:gravity="bottom"
                android:layout_below="@+id/leftCount"
                android:layout_alignParentBottom="true"
                android:textColor="#808080"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量："
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:textColor="#808080"
                android:textSize="14sp"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/leftCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:paddingTop="5dp"
                android:text="100件"
                android:textColor="#EFA523"
                android:textSize="16sp" />


        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#10000000"/>



</LinearLayout>