<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <include layout="@layout/layout_top"/>

    <TextView
        android:id="@+id/TV_about"
        android:layout_below="@+id/TV_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#808080"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@mipmap/m_about"
        android:text="关于我们"/>
    <View
        android:id="@+id/tests"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/TV_about"
        android:background="#50BDBDBD"/>
    <TextView
        android:id="@+id/TV_version"
        android:layout_below="@+id/tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#808080"
        android:layout_margin="15dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@mipmap/m_version"
        android:text="版本检测"/>
    <View
        android:id="@+id/test01"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/TV_version"
        android:background="#50BDBDBD"/>
    <TextView
        android:id="@+id/TV_agreement"
        android:layout_below="@+id/test01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#808080"
        android:layout_margin="15dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@mipmap/m_arrgment"
        android:text="服务协议"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/TV_agreement"
        android:background="#50BDBDBD"/>

    <TextView
        android:id="@+id/TV_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/recylebackred"
        android:textColor="#fff"
        android:textSize="15sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp"
        android:text="退出账号" />

</RelativeLayout>